{
  "name": "wamp-cli",
  "version": "4.0.0",
  "description": "A CLI for testing WAMP connections",
  "main": "dist/repl.js",
  "bin": {
    "wampc": "dist/program.js"
  },
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && tsc && rimraf 'dist/**/?(__tests__|__mocks__|__setup__|*.test.*)'",
    "clean": "rimraf dist",
    "start": "yarn ts-node src/program.ts"
  },
  "dependencies": {
    "autobahn": "^22.11.1",
    "cli-table": "^0.3.11",
    "colors": "^1.4.0",
    "commander": "^10.0.1",
    "tslib": "^2.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@semantic-release/commit-analyzer": "10.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "9.0.2",
    "@semantic-release/npm": "10.0.3",
    "@semantic-release/release-notes-generator": "11.0.3",
    "@types/autobahn": "20.9.1",
    "@types/cli-table": "0.3.1",
    "@types/node": "20.2.5",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "semantic-release": "21.0.3",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@3.6.0"
}

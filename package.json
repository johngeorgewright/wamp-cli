    "prepare": "husky"
  },
  "dependencies": {
    "autobahn": "^22.11.1",
    "cli-table": "^0.3.11",
    "colors": "^1.4.0",
    "commander": "^14.0.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/autobahn": "20.9.4",
    "@types/cli-table": "0.3.4",
    "@types/node": "24.10.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "semantic-release": "25.0.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vite-node": "^5.0.0"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "npx prettier --ignore-path .gitignore --write"
    ]
  }
}

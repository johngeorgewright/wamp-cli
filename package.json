{
  "name": "wamp-cli",
  "version": "4.0.0",
  "description": "A CLI for testing WAMP connections",
  "type": "module",
  "bin": {
    "wampc": "src/program.js"
  },
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf src/*.{js,d.ts}",
